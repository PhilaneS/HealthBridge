
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div ng-app="app" ng-controller="PatientController">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2>Patient registration</h2>
                <form name="registerForm" ng-submit="submitRegisterForm(user)" novalidate>

                    <div class="form-group" ng-class="{ 'has-error' : (registerForm.firstname.$invalid && !registerForm.firstname.$pristine) ||
                         (registerForm.firstname.$invalid && registerForm.firstname.$pristine &&registerForm.firstname.$touched) }">
                        <label>First Name</label>
                        <input type="text" name="firstname" class="form-control" ng-model="user.firstname" required ng-maxlength="50">
                        <p ng-show="(registerForm.firstname.$invalid && !registerForm.firstname.$pristine && !registerForm.firstname.$error.maxlength) ||
                         (registerForm.firstname.$invalid && registerForm.firstname.$pristine &&registerForm.firstname.$touched)" class="help-block">First Name is required.</p>
                        <p ng-show="registerForm.firstname.$error.maxlength" class="help-block">First name cannot  exceed 50 charecters.</p>
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' :  (registerForm.lastname.$invalid && !registerForm.lastname.$pristine) ||
                         (registerForm.lastname.$invalid && registerForm.lastname.$pristine &&registerForm.lastname.$touched) }">
                        <label>Last Name</label>
                        <input type="text" name="lastname" class="form-control" ng-model="user.lastname" required ng-maxlength="50">
                        <p ng-show="(registerForm.lastname.$invalid && !registerForm.lastname.$pristine && !registerForm.lastname.$error.maxlength) ||
                         (registerForm.lastname.$invalid && registerForm.lastname.$pristine &&registerForm.lastname.$touched)" class="help-block">Last Name is required.</p>
                        <p ng-show="registerForm.lastname.$error.maxlength" class="help-block">Last name cannot  exceed 50 charecters.</p>
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : (registerForm.idnumber.$invalid && !registerForm.idnumber.$pristine) ||
                         (registerForm.idnumber.$invalid && registerForm.idnumber.$pristine &&registerForm.idnumber.$touched)}">
                        <label>ID Number</label>
                        <input type="text" name="idnumber" class="form-control" ng-model="user.idnumber" required ng-minlength="13" ng-maxlength="13">
                        <p ng-show="(registerForm.idnumber.$invalid && !registerForm.idnumber.$pristine && !registerForm.idnumber.$error.minlength && !registerForm.idnumber.$error.maxlength ) ||
                         (registerForm.idnumber.$invalid && registerForm.idnumber.$pristine &&registerForm.idnumber.$touched)" class="help-block">ID number is required.</p>
                        <p ng-show="registerForm.idnumber.$error.minlength" class="help-block">ID number cannot be less than 13 charectors</p>
                        <p ng-show="registerForm.idnumber.$error.maxlength" class="help-block">ID number cannot exceed 13 charecters</p>
                    </div>

                    <button type="submit" class="btn btn-primary" ng-disabled="registerForm.$invalid">Submit</button>

                </form>
            </div>            
        </div>
    </div>
</div>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/App/Patient.js"></script>

